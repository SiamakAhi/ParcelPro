 @model VmTafsilReport
@{
    ViewData["Title"] = "گزارش تفصیل'";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{

    long totalBed = Model.Report.Sum(n => n.Bed);
    long totalBes = Model.Report.Sum(n => n.Bes);
    long ekhtelaf = totalBed >= totalBes ? totalBed - totalBes : totalBes - totalBed;

    string strTotalBed = totalBed > 0 ? totalBed.ToPrice() : "0";
    string strTotalBes = totalBes > 0 ? totalBes.ToPrice() : "0";
    string strEkhtelaf = ekhtelaf > 0 ? ekhtelaf.ToPrice() : "0";
    string status = (ekhtelaf > 0 && totalBed > totalBes) ? "بدهکار" : ((ekhtelaf > 0 && totalBes > totalBed) ? "بستانکار" : "");
    List<string> tafsilName = Model.Report.Select(s => s.Tafsil4Name).Distinct().ToList();

    string selectedTafsils = "";
    for (int i = 0; i < tafsilName.Count; i++)
    {
        selectedTafsils += tafsilName[i];
        if (i < tafsilName.Count - 1)
            selectedTafsils += "، "; 
    }
    selectedTafsils = selectedTafsils.TrimEnd('،');
}


<div class="card page-header-panel">
    <div class="card-panel-header">
        <div><span class="card-panel-title">گزارش تفصیل :  </span> 
                <span class="text-warning ms-2">@selectedTafsils</span>
        </div>
    </div>
     <div>
        <form asp-action="TafsilReport" asp-controller="AccReports" asp-area="Accounting" method="post" id="frmTafsilReportFilter">
            <input type="hidden" asp-for="filter.SellerId" value="@Model.filter.SellerId" />
            <input type="hidden" asp-for="filter.PeriodId" value="@Model.filter.PeriodId" />
            <div class="row">
                <div class="col-md-9">
                    <div class="card-header-panel-section">
                        <div class="card-header-panel-section-header p-0"><span>فیلتر  </span></div>
                        <div class="card-header-panel-section-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="row">
                                        <div class="col-md-12 mb-2">
                                            <div class="garnet-input-group1 garnet-input-group-light">
                                                <label asp-for="filter.strStartDate">از تاریخ‌</label>
                                                <input type="text" asp-for="filter.strStartDate" class="flatpickr-input" value="@Model.filter.strStartDate" placeholder="YYYY/MM/DD">
                                            </div>
                                        </div>
                                        <div class="col-md-12 mb-2">
                                            <div class="garnet-input-group1 garnet-input-group-light">
                                                <label asp-for="filter.strEndDate">تا تاریخ‌</label>
                                                <input type="text" asp-for="filter.strEndDate" class="flatpickr-input" placeholder="YYYY/MM/DD">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="row">
                                        <div class="col-md-6 mb-2 select2-dark">
                                            <div class="garnet-input-group1 garnet-input-group-light">
                                                <label> کل</label>
                                                <select asp-for="filter.Kols" class="select2 gonext" multiple asp-items="@ViewBag.Kols">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-2 select2-dark">
                                            <div class="garnet-input-group1 garnet-input-group-light">
                                                <label>معین</label>
                                                <select asp-for="filter.Moeins" class="select2 gonext" multiple asp-items="@ViewBag.Moeins">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12 mb-2 select2-dark">
                                            <div class="garnet-input-group1 garnet-input-group-light">
                                                <label> تفصیل</label>
                                                <select asp-for="filter.Tafsil4Ids" class="select2 gonext" multiple asp-items="@ViewBag.Tafsils">
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card-header-panel-section">
                        <div class="card-header-panel-section-header"><span>عملیات </span></div>
                        <div class="card-header-panel-section-body">
                            <div class="row">
                                <div class="col-12 d-grid px-2">
                                    <button type="submit" class="garnet-btn garnet-btn-warning mb-2">
                                        <i class="tf-icons bx bx-list-ol mx-1"></i>
                                        بازیابی گزارش
                                    </button>
                                </div>
                                <div class="col-12 d-grid px-2">
                                    <a href="javascript:void(0)" data-formid="frmTafsilReportFilter" data-url="@Url.Action("GetTafsil4Moein", "AccReports", new { Area = "Accounting" })" class="garnet-btn garnet-btn-info mb-2 submitCustomForm">
                                        <i class="tf-icons bx bx-category mx-1"></i>
                                        گزارش در سطح معین
                                    </a>
                                </div>
                              
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
     </div>
    <div class="card-body card-table mt-3">
        <div class="table-responsive text-nowrap static-height-600">
            <table class="table table-hover table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ردیف</th>
                        <th>سند</th>
                        <th>تاریخ</th>
                        <th>کل</th>
                        <th>معین </th>
                        <th>تفصیل 4</th>
                        <th>تفصیل 5</th>
                        <th>تفصیل 6</th>
                        <th>شرح آرتیکل</th>
                        <th>بد</th>
                        <th>بس</th>
                        <th>مانده</th>
                        <th>وضعیت حساب</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model.Report?.Count() > 0)
                    {
                        int row = 1;
                        foreach (var x in Model.Report)
                        {
                            <tr class="dblc-link accCoding" data-url="@Url.Action("Doc", "OpAccoucnting", new { Area = "", id = x.DocId })">
                                <td class="row-num">@row</td>
                                <td>@x.DocNumber</td>
                                <td>@x.DocDate.LatinToPersian()</td>
                                <td>@x.KolName</td>
                                <td>@x.MoeinName</td>
                                <td>@x.Tafsil4Name</td>
                                <td>@x.Tafsil5Name</td>
                                <td>@x.Tafsil6Name</td>
                                <td>@x.Comment</td>
                                <td class="col-price">@(x.Bed > 0 ? x.Bed.ToPrice() : "0")</td>
                                <td class="col-price">@(x.Bes > 0 ? x.Bes.ToPrice() : "0")</td>
                                <td class="col-price">@(x.Balace > 0 ? x.Balace.ToPrice() : "0")</td>
                                <td>@x.BalaceNature.AccToNatureName()</td>
                                
                            </tr>
                            row++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-md-7"></div>
            <div class="col-md-5">
                <div class="custom-box1">
                    <ul class="docfooter-totalAmounts">
                        <li>
                            <label>جمع بدهکار : </label>
                            <div>
                                <input type="text" readonly value="@strTotalBed" />
                                <span class="text-sm-end">ريال</span>
                            </div>
                        </li>
                        <li>
                            <label>جمع بستانکار : </label>
                            <div>
                                <input type="text" readonly value="@strTotalBes" />
                                <span class="text-sm-end">ريال</span>
                            </div>
                        </li>
                        <li>
                            <label class="docBalance">
                                @if (status == "بدهکار")
                                {
                                    <span class="badge badge-dot bg-label-primary px-3">@status</span>
                                }
                                else if (status == "بستانکار")
                                {
                                    <span class="badge badge-dot bg-label-warning px-3">@status</span>
                                }
                                else
                                {
                                    <span class="badge badge-dot bg-label-success px-3">تسویه</span>
                                }

                            </label>
                            <div>
                                <input type="text" readonly value="@strEkhtelaf" />
                                <span class="text-sm-end">ريال</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>



