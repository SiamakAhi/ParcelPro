@model VmRepresentativeInfo
@{
    ViewData["Title"] = "اطلاعات شعب و نمایندگان";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-header d-flex justify-content-between">
        <h5>
            اطلاعات شعب و نمایندگی های همکار
        </h5>
    </div>
    <div class="row alert-secondary p-4">
        <div class="col-md-12">
            <div class="search-box persen-search-box mb-3">
                <h4 class="card-title">فیلتر</h4>
                <form asp-action="BranchesInfo" asp-controller="AccRepresentative" asp-area="Accounting" method="get" id="frmpersenFilter">
                    <input type="hidden" asp-for="filter.PageSize" value="50" />
                    <input type="hidden" asp-for="filter.CurrentPage" value="1" />

                    <div class="row">
                        <div class="col-md-4 select2-dark">
                            <label class="form-label">شعبه / نمایندگی</label>
                            <select asp-for="filter.Id" class="form-select select2" asp-items="@ViewBag.BranchesList">
                                <option value="null"> همه</option>
                            </select>
                        </div>
                        <div class="col-md-3 select2-dark">
                            <label class="form-label">انتخاب طرف حساب</label>
                            <select asp-for="filter.PersonId" class="form-select select2" asp-items="@ViewBag.Persen">
                                <option value="null"> همه</option>
                            </select>
                        </div>
                        <div class="col-md-3 select2-dark">
                            <label class="form-label">شهر</label>
                            <select asp-for="filter.CityId" class="form-select select2" asp-items="@ViewBag.Cities">
                                <option value="null"> همه</option>
                            </select>
                        </div>
                        

                        <div class="col-md-2 d-grid p-2 mt-4">
                            <input type="submit" class="btn btn-danger" value="نمایش" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">ردیف</th>
                        <th></th>
                        <th class="text-center">نام</th>
                        <th class="text-center">شهر</th>
                        <th class="text-center">طرف حساب</th>
                        <th class="text-center">تاریخ ایجاد</th>
                        <th class="text-center">درصد از فروش</th>
                        <th class="text-center">درصد از توزیع</th>
                        <th class="text-center">مدیر شعبه</th>
                        <th class="text-center">تماس مدیر شعبه</th>
                        <th class="text-center">آدرس</th>
                        <th class="text-center"></th>
                      
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model.Branches.Count() > 0)
                    {
                        int row = 1;
                        foreach (var x in Model.Branches)
                        {
                            <tr>
                                <td class="text-center">@row</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button id="btnGroupDrop1" type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            اقدامات
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                                            <a class="dropdown-item"
                                               asp-route-id="@x.PartyId"
                                               asp-action="thePartyBills"
                                               asp-controller="AccSaleManagement"
                                               asp-area="Accounting"><i class="fa fa-eye me-3 text-warning"></i>صورتحساب</a>
                                            <a class="dropdown-item" href="#"><i class="fa fa-print me-3 text-warning"></i>---</a>
                                            <a class="dropdown-item" href="#"><i class="fa fa-print me-3 text-warning"></i>--</a>
                                        </div>

                                    </div>
                                </td>
                                <td>@x.BranchName</td>
                                <td>@x.CityName</td>
                                <td>@x.PartyName</td>
                                <td>@x.OpeningDate?.LatinToPersian()</td>
                                <td>@x.DistShare?.ToString("0.##")</td>
                                <td>@x.DistShare?.ToString("0.##")</td>
                                <td>@x.BranchManager</td>
                                <td>@x.BranchManagerPhoneNumber</td>
                                <td>@x.Address</td>
                                <td class="row-btns text-center">
                                </td>
                            </tr>

                            row++;
                        }

                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">

        </div>

</div>

