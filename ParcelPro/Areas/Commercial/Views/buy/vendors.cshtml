@model PersonListDto
@{
    ViewData["Title"] = "لیست تأمین کنندگان";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-panel">
    <div class="card-panel-header">
        <div><span class="card-panel-title">فاکتورهای فروش</span></div>
        <div class="card-panel-navbar-container">
            <ul class="card-panel-navbar">
                <li>
                    <a href="javascript:void(0)" data-url="@Url.Action("addVendor", "buy", new { Area = "Commercial" })" class="quickaccess-link callform">
                        <i class="bx bx-cart-add"></i>
                        <span>جـدید</span>
                    </a>
                </li>

            </ul>
        </div>
    </div>
    <div>
        <form asp-action="vendors" asp-controller="buy" asp-area="Commercial" method="get" id="frmVendorsFilter">
            <input type="hidden" asp-for="filter.CurrentPage" value="1" />
            <input type="hidden" asp-for="filter.isVendor" value="true" />

            <div class="row">
                <div class="col-md-9">
                    <div class="card-panel-section">
                        <div class="card-header-panel-section-header">
                            <span>فیلتـر</span>
                        </div>
                        <div class="card-header-panel-section-body">
                            <div class="row">
                                <div class="col-md-4 mb-2">
                                    <div class="garnet-input-group1 garnet-input-group-light">
                                        <label>نام</label>
                                        <input type="text" class="text-center" asp-for="filter.name">
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="garnet-input-group1 garnet-input-group-light">
                                        <label>نوع </label>
                                        <select asp-for="filter.legal">
                                            <option value="" selected>همه</option>
                                            <option value="1">حقیقی</option>
                                            <option value="2">حقوقی</option>
                                            <option value="3">مشارکت مدنی</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="garnet-input-group1 garnet-input-group-light">
                                        <label>شناسه ملی</label>
                                        <input type="text" class="text-center" asp-for="filter.nationalId">
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="garnet-input-group1 garnet-input-group-light">
                                        <label>شماره تماس / موبایل</label>
                                        <input type="tel" class="text-center" asp-for="filter.phone">
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="garnet-input-group1 garnet-input-group-light">
                                        <label>تعداد ردیف در هر صفحه</label>
                                        <input type="number" min="1" asp-for="filter.PageSize" value="@Model.filter.PageSize">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card-panel-section">
                        <div class="card-header-panel-section-header">
                            <span>عملیات</span>
                        </div>
                        <div class="card-header-panel-section-body">
                            <div class="d-grid px-2">
                                <input type="submit" class="garnet-btn garnet-btn-warning mb-1" value="نمایش" />
                            </div>
                            <div class="d-grid px-2">
                                <a href="javascript:void(0)" data-formid="frmSaleInvoiceFilter" data-url="@Url.Action("", "buy", new { Area = "Commercial" })" class="garnet-btn garnet-btn-info  mb-1 submitCustomForm">
                                    چاپ
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="card-body card-table">
        <div class="table-responsive text-nowrap static-height-450">
            <table class="table table-hover table-striped table-bordered" id="tblvendors">
                <thead class="table-dark">
                    <tr>
                        <th class="row-chb">
                            @*  <input type="checkbox" class="selectAllRows" /> *@
                            ردیف
                        </th>
                        <th>نام</th>
                        <th>نوع</th>
                        <th>شناسه ملی</th>
                        <th>کد اقتصادی </th>
                        <th>شماره تماس </th>
                         <th>حساب تفصیلی</th>

                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model.persen.Items.Count() > 0)
                    {
                        int row = 1;
                        foreach (var x in Model.persen.Items)
                        {
                            <tr>
                                <td class="row-chb">
                                    @row
                                    @*  <input type="checkbox" class="tblRow px-3" name="itemId" value="@x.Id" /> *@
                                </td>
                                <td>@x.Name</td>
                                <td>@x.LegalStatus.ToLegalStatusName() </td>
                                <td>@x.NationalId</td>
                                <td>@x.EconomicCode</td>
                                <td>@x.MobilePhone</td>
                                <td></td>
                            </tr>

                            row++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center p-2 "> اطلاعاتی جهت نمایش وجود ندارد</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-lg-7 col-md-6">
                @if (Model.persen.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="pagin mt-3">
                        <ul class="pagination pagination-sm text-center">
                            @if (Model.persen.HasPreviousPage)
                            {
                                <li class="page-item prev">
                                    <a class="page-link" data-formid="frmVendorsFilter" data-currentpage="@(Model.persen.CurrentPage - 1)">
                                        <i class="tf-icon bx bx-chevrons-left"></i>
                                    </a>
                                </li>
                            }

                            @{
                                int totalPages = Model.persen.TotalPages;
                                int currentPage = Model.persen.CurrentPage;
                                int pageRange = 3; // تعداد صفحات قبل و بعد از صفحه فعلی

                                int startPage = Math.Max(1, currentPage - pageRange);
                                int endPage = Math.Min(totalPages, currentPage + pageRange);

                                if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" data-formid="frmVendorsFilter" data-currentpage="1">1</a>
                                    </li>
                                    if (startPage > 2)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                }

                                for (int i = startPage; i <= endPage; i++)
                                {
                                    string strActive = currentPage == i ? "active" : "";
                                    <li class="page-item @strActive">
                                        <a class="page-link" data-formid="frmVendorsFilter" data-currentpage="@i">@i</a>
                                    </li>
                                }

                                if (endPage < totalPages)
                                {
                                    if (endPage < totalPages - 1)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link" data-formid="frmVendorsFilter" data-currentpage="@totalPages">@totalPages</a>
                                    </li>
                                }
                            }

                            @if (Model.persen.HasNextPage)
                            {
                                <li class="page-item next">
                                    <a class="page-link" data-formid="frmVendorsFilter" data-currentpage="@(Model.persen.CurrentPage + 1)">
                                        <i class="tf-icon bx bx-chevrons-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
            <div class="col-lg-5 col-md-6">
            </div>

        </div>
    </div>

</div>

