@model List<RateWeightRangeDto>
@{
    ViewData["Title"] = "مدیریت رنج‌های وزنی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header alert-secondary p-0">
            <h5 class="custom-card-title">
                <i class="bx bxs-category-alt text-warning"></i>
                مدیریت رنج‌های وزنی
            </h5>
            <div class="section-nav">
                <div class="nav-btnbox ms-2 mb-2">
                    <a href="#" data-url="@Url.Action("AddRateWeightRange", "Pricing", new { Area = "Courier" })" data-target="0" class="btn btn-sm btn-secondary callform">
                        ایجاد رنج وزنی جدید
                    </a>
                    <a href="#" data-url="@Url.Action("AddWeightFactorIncrement", "Pricing", new { Area = "Courier" })" data-target="0" class="btn btn-sm btn-secondary ms-2 callform">
                        بروزرسانی گروهی رنج وزنی
                    </a>
                </div>
                
            </div>
        </div>
    </div>

    <div class="card-body card-table">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ردیف</th>
                        <th>وزن شروع</th>
                        <th>وزن پایان</th>
                        <th>درصد ضریب وزن</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model?.Count() > 0)
                    {
                        int row = 1;
                        foreach (var x in Model)
                        {
                            <tr>
                                <td class="text-center">@row</td>
                                <td class="text-center">@x.StartWeight</td>
                                <td class="text-center">@x.EndWeight</td>
                                <td class="text-center">@x.WeightFactorPercent</td>
                                <td class="row-btns text-center">
                                    <a href="#" class="callform" data-url="@Url.Action("UpdateRateWeightRange", "Pricing", new { Area = "Courier", id = x.Id })">
                                        <i class="bx bx-edit-alt text-gray" title="ویرایش"></i>
                                    </a>
                                    <a href="#" class="removeById" data-url="@Url.Action("DeleteRateWeightRange", "Pricing", new { Area = "Courier" })" data-target="@x.Id">
                                        <i class="bx bx-trash text-warning" title="حذف"></i>
                                    </a>
                                </td>
                            </tr>
                            row++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">
                                رنج وزنی در سیستم ثبت نشده است
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer p-4">
    </div>
</div>