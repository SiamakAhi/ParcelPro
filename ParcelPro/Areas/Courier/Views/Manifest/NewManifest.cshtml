@model ManifestDto
@{
    ViewData["Title"] = "NewManifest";
    Layout = "~/Views/Shared/_AppRepLayout.cshtml";
}

<div class="container py-4">

    <div class="card">
        <h5 class="card-header">صدور مانیفست</h5>
        <div class="card-body">
            <form asp-action="NewManifest" asp-controller="Manifest" asp-area="Courier" method="post">
                <div class="row">
                    <div class="form-group col-md-3 mb-2">
                        <label class="form-label" asp-for="TransportType"></label>
                       <select class="form-select" asp-for="TransportType" asp-items="@ViewBag.Transporttypes">

                       </select>
                    </div>
                    <div class="form-group col-md-2 mb-2">
                        <label class="form-label" asp-for="Date"></label>
                        <input type="text" class="form-control flatpickr-input" asp-for="Date" />
                    </div>
                    <div class="form-group col-md-3 mb-2">
                        <label class="form-label" asp-for="DestinationHubId"></label>
                        <select class="form-select" asp-for="DestinationHubId" asp-items="@ViewBag.Hubs">
                        </select>
                    </div>
                    <div class="form-group col-md-3 mb-2">
                        <label class="form-label" asp-for="VehicleId"></label>
                        <select class="form-select" asp-for="VehicleId" asp-items="@ViewBag.Vehicles">
                        </select>
                    </div>
                    <div class="form-group col-md-3 mb-2">
                        <label class="form-label" asp-for="DriverId"></label>
                        <select class="form-select" asp-for="DriverId" asp-items="@ViewBag.Vehicles">
                        </select>
                    </div>

                </div>


            </form>
        </div>
    </div>
</div>

