@model ParcelPro.Areas.Treasury.Dto.TreBankPosUcDto
@{
  
    string modalTitle = Model == null ? "افزودن دستگاه پوز" : "ویرایش دستگاه پوز";
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @modalTitle
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form class="mt-3" asp-action="@(Model == null ? "AddPosDevice" : "EditPosDevice")" asp-controller="TreCashBox" asp-area="Treasury" method="post">
                @if (Model !=null)
                {
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    
                }
                <input type="hidden" asp-for="SellerId" value="0" />

                <div class="row">
                    <div class="col-md-12 mb-2">
                        <label asp-for="Name" class="form-label"></label>
                        <input type="text" class="form-control form-control-sm" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-2">
                        <label asp-for="TerminalNumber" class="form-label"></label>
                        <input type="text" class="form-control form-control-sm" asp-for="TerminalNumber" />
                        <span asp-validation-for="TerminalNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-2">
                        <label asp-for="BranchId" class="form-label"></label>
                        <select asp-for="BranchId" class="form-control form-control-sm" asp-items="@ViewBag.Branches">
                            <option value="">انتخاب کنید</option>
                        </select>
                        <span asp-validation-for="BranchId" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-2">
                        <label asp-for="BankAccountId" class="form-label"></label>
                        <select asp-for="BankAccountId" class="form-control form-control-sm" asp-items="@ViewBag.BankAccounts">
                            <option value="">انتخاب کنید</option>
                        </select>
                        <span asp-validation-for="BankAccountId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-2">
                        <label asp-for="CurrencyId" class="form-label"></label>
                        <select asp-for="CurrencyId" class="form-control form-control-sm" asp-items="@ViewBag.Currencies">
                            <option value="">انتخاب کنید</option>
                        </select>
                        <span asp-validation-for="CurrencyId" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-2 mt-3">
                        <label class="switch">
                            <input type="checkbox" asp-for="IsActive" class="switch-input" checked>
                            <span class="switch-toggle-slider">
                                <span class="switch-on"></span>
                                <span class="switch-off"></span>
                            </span>
                            <span class="switch-label">فعال</span>
                        </label>
                    </div>
                </div>
                <hr />
                <div class="d-grid mb-2 p-2">
                    <a href="#" class="btn btn-primary accAjaxSubmit">ثبت</a>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/forms-selects.js"></script>
