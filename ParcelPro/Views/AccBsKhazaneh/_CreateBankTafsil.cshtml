@model AutoAddTafsilDto

<div class="modal-dialog modal-lg modal-simple">

    <div class="modal-content p-3 p-md-5">
        <div class="modal-header">
            <div class="alert alert-primary alert-dismissible d-flex align-items-center" role="alert">
                <h5>
                    <i class="bx bx-xs bx-command me-2 text-info"></i>
                    ایجاد سرفصل در گروه <strong class="text-warning">@ViewBag.GroupCode - @ViewBag.GroupName</strong>
                </h5>

            </div>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class=" mb-4 mt-0 mt-md-n2">
                <form asp-action="AddKol" asp-controller="AccCoding" asp-area="" method="post" class="mt-4 appform1">

                    <input type="hidden" asp-for="GroupId" value="@Model.GroupId" />
                    <input type="hidden" asp-for="SellerId" value="@Model.SellerId" />
                    <div class="row mb-1">

                        <div class="col-12">
                            <label class="form-label" asp-for="Name">نام حساب تفصیل</label>
                            <input type="text" asp-for="Name" class="form-control" />
                        </div>

                       @* <div class="col-12 select2-dark">
                            <label class="form-label">گروه (ها)</label>
                            <select asp-for="GroupId" class="select2 form-select" multiple asp-items="@ViewBag.Groups">
                            </select>
                        </div>*@
                    </div>

                    <hr />
                    <div class="row d-grid mt-3">
                        <input type="button" class="btn btn-primary mt-2 accAjaxSubmit" value="ایجاد حســاب" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

