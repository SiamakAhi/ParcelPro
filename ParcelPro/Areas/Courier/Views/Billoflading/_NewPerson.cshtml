   @model PersonDto

<div class="modal-dialog modal-md">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">معرفی شخص</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form class="mt-3" asp-action="NewPerson" asp-controller="Billoflading" asp-area="Courier" method="post">
                <input type="hidden" asp-for="CustomerId" value="@ViewBag.customerId" />
                <input type="hidden" asp-for="SellerId" value="@ViewBag.SellerId" />
                <input type="hidden" asp-for="BranchId" value="@ViewBag.BranchId" />

                <div class="row">
                    <div class="col-md-4 mb-2">
                        <label class="form-label" asp-for="LegalStatus"></label>
                        <select asp-for="LegalStatus" class="form-control form-control-sm gonext" asp-items="@ViewBag.PartyTypes">
                            <option selected>انتخاب کنید</option>
                        </select>
                    </div>
                    <div class="col-md-8 mb-2">
                        <label class="form-label" asp-for="Name">نام کامل</label>
                        <input type="text" asp-for="Name" class="form-control form-control-sm gonext" placeholder="گروه نرم افزار گارنِت">
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label" asp-for="NationalId">شناسه/کد ملی</label>
                        <input type="text" asp-for="NationalId" class="form-control form-control-sm gonext">
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label" asp-for="EconomicCode">کد اقتصادی</label>
                        <input type="text" asp-for="EconomicCode" class="form-control gonext">
                    </div>

                    <div class="col-md-12 mb-2">
                        <label asp-for="Address" class="form-label"></label>
                        <textarea rows="2" class="form-control form-control-sm gonext" asp-for="Address" ></textarea>
                    </div>

                    <div class="col-md-6 mb-2">
                        <label asp-for="PostalCode" class="form-label">کد پستی</label>
                        <input type="text" class="form-control form-control-sm gonext" asp-for="PostalCode" />
                    </div>
                    <div class="col-md-6 mb-2">
                        <label asp-for="MobilePhone" class="form-label">شماره همراه</label>
                        <input type="text" class="form-control form-control-sm gonext" asp-for="MobilePhone" />
                    </div>

                </div>
                <hr />

                <div class="d-grid mb-2 p-2">
                    <a href="javascript:void(0)" class="btn btn-primary accAjaxSubmit"> ثبت</a>
                </div>
            </form>
        </div>
    </div>
</div>
