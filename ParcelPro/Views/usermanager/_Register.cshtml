@using ParcelPro.Interfaces.Identity;

@model VmRegisterUser
@inject IAppRoleManager _roleManager
@{
    ViewBag.roles = new SelectList(_roleManager.Roles, "Name", "Name");
}

<form  asp-action="Register" asp-controller="usermanager" asp-area="" method="post">

    <div class="row">
        <label class="col-12" >شخص</label>
        <div class="col-1 mt-2">
            <a class="callModalForm  text-primary" data-url="@Url.Action("AddPerson","People",new{Area="Ticket"})"><i class="fas fa-user-plus"></i></a>
        </div>
    </div>
      <hr />
      <div class="row g-2 mb-3">
        <div class="form-floating">
            <input class="form-control" asp-for="FName" id="@Model.FName" type="text" placeholder="نام" />
            <label asp-for="FName"></label>
        </div>
        <div class="form-floating">
            <input class="form-control" asp-for="LName" id="@Model.LName" type="text" placeholder="نام خانوادگی" />
            <label asp-for="LName"></label>
        </div>
        <div class="form-floating">
            <input class="form-control" asp-for="Mobile" id="@Model.Mobile" type="text" placeholder="موبایل" />
            <label asp-for="Mobile"></label>
        </div>
        <div class="form-floating">
            <input type="email" class="form-control" asp-for="email" id="@Model.email" placeholder="ایمیل" />
            <label asp-for="email"></label>
        </div>
        <div class="form-floating">
            <input type="text" class="form-control" asp-for="UserName" id="@Model.UserName" type="text" placeholder="نام کاربری" />
            <label asp-for="UserName"></label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" asp-for="Password" id="@Model.Password" type="text" placeholder="کلمه عبور" />
            <label asp-for="Password"></label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" asp-for="ConfirmPassword" id="@Model.ConfirmPassword" type="text" placeholder="تأیید کلمه عبور" />
            <label asp-for="ConfirmPassword"></label>
        </div>

        <div class="col-md-12">
            <label class="form-label" asp-for="Roles"></label>
            <select class="form-select" asp-for="Roles" id="@Model.Roles"  asp-items='@new SelectList(_roleManager.Roles, "Name","Description")' multiple>
            </select>
        </div>
      </div>
   
    <div class="row">
        <div class="d-grid d-md-block gap-2 pt-3">
            <button class="btn btn-primary submitajax mt-3" data-confirmtext="کاربر جدید ایجاد شود ؟" type="button">ثبت</button>
        </div>
    </div>
    
</form>