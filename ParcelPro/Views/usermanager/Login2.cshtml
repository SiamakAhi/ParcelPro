@model VmLogin
@inject IConfigurationLoader _config

@{
    Layout = null;
    var _set = _config.GetConfigurations();
}

<!DOCTYPE html>
<html lang="fa" class="customizer-hide" dir="rtl" data-theme="theme-default" data-assets-path="../../" data-template="horizontal-menu-template">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">

    <title>آوا اندیش رستـا</title>

    <meta name="description" content="">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="../../img/favicon/favicon.ico">

    <!-- Icons -->
    <link rel="stylesheet" href="../../vendor/fonts/boxicons.css">
    <link rel="stylesheet" href="../../vendor/fonts/fontawesome.css">
    <link rel="stylesheet" href="../../vendor/fonts/flag-icons.css">

    <!-- Core CSS -->
    <link rel="stylesheet" href="../../vendor/css/rtl/core.css" class="template-customizer-core-css">
    <link rel="stylesheet" href="../../vendor/css/rtl/theme-default.css" class="template-customizer-theme-css">
    <link rel="stylesheet" href="../../css/demo.css">
    <link rel="stylesheet" href="../../vendor/css/rtl/rtl.css">

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="../../vendor/libs/perfect-scrollbar/perfect-scrollbar.css">
    <link rel="stylesheet" href="../../vendor/libs/typeahead-js/typeahead.css">
    <!-- Vendor -->
    <link rel="stylesheet" href="../../vendor/libs/formvalidation/dist/css/formValidation.min.css">
    <link href="../../vendor/fonts/farsi-fonts-styles-fa-num/primary-yekanbakh.css" rel="stylesheet" />
    <link rel="stylesheet" href="../../css/demo.css">

    <!-- Page CSS -->
    <!-- Page -->
    <link rel="stylesheet" href="../../vendor/css/pages/page-auth.css">
    <!-- Helpers -->
    <script src="../../vendor/js/helpers.js"></script>

    <script src="../../vendor/js/template-customizer.js"></script>
    <script src="../../js/config.js"></script>
</head>

<body>
    <!-- Content -->

    <div class="authentication-wrapper authentication-cover">
        <div class="authentication-inner row m-0">
            <!-- /Left Text -->
            <div class="d-none d-lg-flex col-lg-7 col-xl-8 align-items-center login-backcolor">
                <div class="flex-row text-center mx-auto">
                    <img src="../../img/backgrounds/bg-login.png" alt="Auth Cover Bg color" width="520" class="img-fluid authentication-cover-img" data-app-light-img="/backgrounds/bg-login.png" data-app-dark-img="/backgrounds/bg-login.png">
                    <div class="mx-auto login-slogan">
                        <h3>@_set.CompanyName</h3>
                        <p class="login-message">
                            @_set.LoginMessage
                        </p>
                    </div>
                </div>
            </div>
            <!-- /Left Text -->
            <!-- Login -->
            <div class="d-flex col-12 col-lg-5 col-xl-4 align-items-center authentication-bg p-sm-5 p-4">
                <div class="w-px-400 mx-auto">
                    <!-- Logo -->
                    <div class="app-brand login mb-4">
                        <a href="https://avarasta.ir" class="app-brand-link gap-2 mb-2">
                            <span class="app-brand-logo ">
                                <img src="@_set.LogoUrl" alt="@_set.CompanyName" />
                            </span>
                        </a>
                    </div>
                    <!-- /Logo -->
                    <h3 class="mb-3 login-appName">@_set.AppName</h3>
                    @*<p class="mb-4"></p>*@

                    <form class="mb-3" asp-fragment="Login" asp-controller="usermanager" asp-area="" method="post">
                        <div class="mb-3">
                            <label class="form-label" asp-for="UserName"></label>
                            <input type="text" class="form-control text-start" asp-for="UserName" placeholder=" نام کاربری خود را وارد کنید" autofocus dir="ltr">
                        </div>
                        <div class="mb-3 form-password-toggle">
                            <div class="d-flex justify-content-between">
                                <label class="form-label" asp-for="Password">رمز عبور</label>
                                <a href="auth-forgot-password-cover.html">
                                    <small>رمز عبور را فراموش کردید؟</small>
                                </a>
                            </div>
                            <div class="input-group input-group-merge">
                                <input type="password"  class="form-control text-start" asp-for="Password" placeholder="············" aria-describedby="password" dir="ltr">
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                                <label class="form-check-label" asp-for="RememberMe"> به خاطر سپاری </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success d-grid w-100">ورود</button>
                    </form>
                    
                    <p class="text-center">
                        <span>کاربر جدید هستید؟</span>
                        <a href="https://avaandish.ir/contact-us/" target="_blank">
                            <span>با مـا تماس بگیرید.</span>
                        </a>
                    </p>

                    <div class="divider my-4">
                        <div class="divider-text">
                            برای ورود مشکلی دارید ؟
                        </div>
                        <div asp-validation-summary=All class=" p-2">
                          
                        </div>
                    </div>
                  
                </div>
            </div>
            <!-- /Login -->
        </div>
    </div>

    <!-- / Content -->
    <!-- Core JS -->
    <!-- build:js vendor/js/core.js -->
    <script src="../../vendor/libs/jquery/jquery.js"></script>
    <script src="../../vendor/libs/popper/popper.js"></script>
    <script src="../../vendor/js/bootstrap.js"></script>
    <script src="../../vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>

    <script src="../../vendor/libs/hammer/hammer.js"></script>

    <script src="../../vendor/libs/i18n/i18n.js"></script>
    <script src="../../vendor/libs/typeahead-js/typeahead.js"></script>

    <script src="../../vendor/js/menu.js"></script>
    <!-- endbuild -->
    <!-- Vendors JS -->
    <script src="../../vendor/libs/formvalidation/dist/js/FormValidation.min.js"></script>
    <script src="../../vendor/libs/formvalidation/dist/js/plugins/Bootstrap5.min.js"></script>
    <script src="../../vendor/libs/formvalidation/dist/js/plugins/AutoFocus.min.js"></script>

    <!-- Main JS -->
    <script src="../../js/main.js"></script>

    <!-- Page JS -->
    <script src="../../js/pages-auth.js"></script>
</body>
</html>

