@model ImportBuyerDto
@{
    ViewData["Title"] = "نرم افزار واسط سامانه مودسان گارنِت";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string alert = ViewBag.msg;
}

  <div class="container">
    <div class="card">

        <h5 class="card-header heading-color">
            ورود اطلاعات اشخاص و شرکت ها از اکسل
        </h5>
        <div class="card-body">
            <div class="alert alert-primary mb-3" role="alert">
                کاربر گرامی! شما باید لیست اطلاعات اشخاص و شرکت ها را مطابق با فایل نمونه آماده و از طریق فرم زیر وارد نمایید. جهت دریافت فایل نمونه
                <a href="~/sticFiles/Garnet_SamplePersenInfo.xlsx"><strong class="text-warning">اینجــا</strong></a>
                کلیک کنید.
            </div>

            <form asp-action="ImportBuyerFromXls" asp-controller="Import" asp-area="" method="post" enctype="multipart/form-data">
                <div class="row app-groupbox mt-3">
                    <div class="col-md-5">
                        <div class="form-check form-check-warning mt-3">
                            <input class="form-check-input" type="checkbox" asp-for="CheckNationalId" checked="checked">
                            <label class="form-check-label" asp-for="CheckNationalId">اعتبارسنجی شناسه/کد ملی انجام شود</label>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-check form-check-primary mt-3">
                            <input class="form-check-input" asp-for="AlowDuplicate" type="checkbox" checked="checked">
                            <label class="form-check-label" asp-for="AlowDuplicate">امکان ثبت شناسه ملی و کد اقتصادی تکراری وجود داشته باشد</label>
                        </div>
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col-12c mb-4">
                        <label class="form-label">انتخاب فایل اکسل </label>
                        <input type="file" class="form-control" asp-for="ExcelFile" accept=".xls, .xlsx" placeholder="انتخاب اکسل حاوی اطلاعات کالا یا خدمات" />
                    </div>
                    <div class="mt-2">
                        <input type="submit" class="btn btn-primary mb-2" value="دریافت و ثبت اطلاعات" />
                        <a class="btn btn-warning mb-2" asp-action="Buyers" asp-controller="Buyer" asp-area="">بازگشت به لیست مشتریان</a>
                    </div>
                </div>
            </form>

            <div>

                @if (!string.IsNullOrEmpty(alert))
                {
                    <div class="alert alert-info alert-dismissible mt-4" role="alert">
                        <h6 class="alert-heading mb-1"><i class="bx bx-xs bx-detail me-2"></i>کاربر گرامی !</h6>
                        <span>
                            @Html.Raw(alert)
                        </span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                }


            </div>
        </div>
    </div>
  </div>


