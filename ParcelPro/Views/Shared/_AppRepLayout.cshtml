                                    {
                                        <a href="javascript:void(0)" data-url="@Url.Action("MoveAccounts", "AccSaleManagement", new { Area = "Accounting" })" class="dropdown-item callform">
                                            <div data-i18n="Accounting Code">یکپارچه سازی حساب ها</div>
                                        </a>
                                        <a asp-action="BranchPartyBills" asp-controller="kp" asp-area="Representatives" class="dropdown-item">
                                            <div data-i18n="Accounting Code">گزارش حساب اعتباری</div>
                                        </a>
                                        <a asp-action="CreditClients" asp-controller="Billoflading" asp-area="Courier" class="dropdown-item">
                                            <div data-i18n="Accounting Code">مدیریت مشتریان اعتباری</div>
                                        </a>
                                    }

                                </div>
                            </li>
                        }
                       
