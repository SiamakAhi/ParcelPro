@model List<DriverDto>
@{
    ViewData["Title"] = "کیهان پست هاب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header alert-secondary p-0">
            <h5 class="custom-card-title">
                <i class="bx bxs-category-alt text-warning"></i>
                مدیریت رانندگان حمل بار
            </h5>
            <div class="section-nav">

                <div class="nav-btnbox mb-2 ms-2">
                    <a href="#" data-url="@Url.Action("AddDriver", "Hub", new { Area = "Courier" })" class="btn btn-sm btn-secondary callform">
                        معرفی راننده جدید
                    </a>
                </div>
            </div>

        </div>


        <div class="card-body card-table">
            <div class="table-responsive text-nowrap">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ردیف</th>
                            <th>نام رانند</th>
                            <th>شماره تماس </th>
                            <th>کد ملی </th>
                            <th>شماره گواهینامه</th>
                            <th>انقضای گواهینامه</th>
                            <th>فعال</th>
                            <th>اقدام</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @if (Model?.Count() > 0)
                        {
                            int row = 1;
                            foreach (var x in Model)
                            {
                                <tr>
                                    <td>@row</td>
                                    <td>@x.FullName</td>
                                    <td>@x.PhoneNumber</td>
                                    <td>@x.NationalCode</td>
                                    <td>@x.LicenseNumber</td>
                                    <td>@x.LicenseExpiryDate.LatinToPersian()</td>
                                    <td>@(x.IsActive ? "فعال" : "غیرفعال")</td>
                                    <td class="row-btns text-center">
                                        <a href="#" class="callform" data-url="@Url.Action("UpdateDriver", "Hub", new { Area = "Courier", id = x.Id })"><i class="bx bx-edit-alt text-gray" title="ویرایش"></i></a>
                                        <a href="#" class="removeById" data-url="@Url.Action("", "Hub", new { Area = "Courier" })" data-target="@x.Id"><i class="bx bx-trash text-warning" title="حذف"></i></a>
                                    </td>
                                </tr>

                                row++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">
                                    راننده ای در سیستم ثبت نشده است
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>

        <div class="card-footer p-4">
        </div>
    </div>
</div>

