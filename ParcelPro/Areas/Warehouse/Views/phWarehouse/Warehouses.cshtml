  @model List<WarehouseDto>

@{
    ViewData["Title"] = "انبارها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

   
<div class="container">
    <div class="card card-panel">
        <div class="card-panel-header">
            <div><span class="card-panel-title">مدیریت انبارها</span></div>
            <div class="card-panel-navbar-container">
                <ul class="card-panel-navbar">
                    <li>
                        <a href="javascript:void(0)" data-url="@Url.Action("AddWarehouse", "phWarehouse", new { Area = "Warehouse" })" class="quickaccess-link callform">
                            <i class="bx bx-plus"></i>
                            <span>انبار جدید</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="card-body card-table">
            <div class="table-responsive text-nowrap">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ردیف</th>
                            <th>کد انبار</th>
                            <th>نام انبار</th>
                            <th>محل انبار (آدرس)</th>
                            <th>حساب معین</th>
                            <th>حساب تفصیل</th>
                            <th>فعال</th>
                            <th>توضیحات</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            int row = 1;
                            foreach (var x in Model)
                            {
                                <tr>
                                    <td class="row-chb">@row</td>
                                    <td>@x.WarehouseCode</td>
                                    <td>@x.WarehouseName</td>
                                    <td>@x.Address</td>
                                    <td>@x.MoeinName</td>
                                    <td>@x.TafsilName</td>
                                    <td>@(x.IsActive ? "فعال" : "غیرفعال")</td>
                                    <td>@x.Description</td>
                                    <td>
                                        <a href="javascript:void(0)" class="callform" data-url="@Url.Action("EditWarehouse", "phWarehouse", new { Area = "Warehouse", id = x.WarehouseId })"><i class="bx bx-edit-alt text-gray" title="ویرایش"></i></a>
                                        <a href="javascript:void(0)" class="delByAjax" data-url="@Url.Action("DeleteWarehouse", "phWarehouse", new { Area = "Warehouse" })" data-target="@x.WarehouseId" title="حذف انبار انجام شود ؟"><i class="bx bx-trash text-warning" title="حذف انبار"></i></a>
                                    </td>
                                </tr>
                                row++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center p-2">اطلاعاتی برای نمایش وجود ندارد</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
      @*   <div class="card-footer">
            <a class="btn btn-primary callform" data-url="@Url.Action("AddWarehouse", "phWarehouse", new { Area = "Warehouse" })">ایجاد انبار جدید</a>
        </div> *@
    </div>
</div>



