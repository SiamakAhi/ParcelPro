                        <div class="col-md-6 text-center">
                            <p class="navbar-brand" href="">@branch.BranchName </p>
                        </div>
                        <div class="col-md-6 d-md-flex justify-content-end mb-md-0 mb-3">
                            <form asp-action="billView" asp-controller="Billoflading" asp-area="Courier" method="post" class="searchform order-lg-last">
                                <div class="form-group d-flex">
                                    <input type="text" class="form-control pl-3 gonext" name="billnumber" placeholder="جستجوی با شماره بارنامه">
