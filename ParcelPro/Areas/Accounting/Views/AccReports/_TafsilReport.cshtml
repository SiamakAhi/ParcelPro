<div class="card card-dash mb-2 mt-2">
    <i class="bx bxs-file-doc card-icon"></i>
    <div class="card-header text-lightgreen">
        <i class="bx bxs-bar-chart-alt-2 "></i>
        <span class="mb-0">گزارش حساب اشخاص</span>
    </div>
    <div class="card-body">
        <div class="card-body-section-lightgreen">
            <form asp-action="GetTafsilReport" asp-controller="AccReports" asp-area="Accounting" method="post" class="mt-2">
                <div class="row">
                    <div class="col-md-12 mb-2 select2-dark">
                        <label class="form-label"> طرف حساب</label>
                        <select name="tafsil" class="select2 form-select gonext" asp-items="@ViewBag.Tafsils">
                           <option value="null">انتخاب کنید ...</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">از تاریخ</label>
                        <input type="text" name="startDate" class="form-control form-control-sm flatpickr-input gonext" placeholder="YYYY/MM/DD">
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">تا تاریخ</label>
                        <input type="text" name="endDate" class="form-control form-control-sm flatpickr-input gonext" placeholder="YYYY/MM/DD">
                    </div>
                    <div class="col-md-12 mb-2 select2-dark">
                        <label class="form-label">حساب های موردنظر</label>
                        <select name="moeins" class="select2 form-select gonext" multiple asp-items="@ViewBag.Moeins">
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 form-btn-container">
                        <button type="submit" class="btn btn-secondary">مشاهـده</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>