    <div class="card-body card-table">
        <div class="table-responsive text-nowrap static-height-450">
            <table class="table table-hover table-striped table-bordered" id="tblSaleInvoices">
                <thead class="table-dark">
                    <tr>

                        <th class="row-chb">
                            <input type="checkbox" class="selectAllRows" />
                            ردیف
                        </th>
                        <th>نشان</th>
                        <th></th>
                        <th>شماره </th>
                        <th>تاریخ</th>
                        <th>خریدار </th>
                        <th>نوع تسویه </th>
                        <th>جمع مشمول</th>
                        <th>جمع غیرمشمول</th>
                        <th>تخفیف</th>
                        <th>جمع پس از تخفیف</th>
                        <th>جمع ارزش افزوده</th>
                        <th>مبلغ نهایی فاکتور</th>
                        <th>ایجاد کننده</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model.Invoices.Items.Count() > 0)
                    {
                        int row = (Model.filter.CurrentPage - 1) * Model.filter.PageSize +1;
                        foreach (var x in Model.Invoices.Items)
                        {
                            <tr class="dblc-link" data-tax="@x.TotalTaxable" data-afdis="@x.TotalPriceAfterDiscount" data-notax="@x.TotalNoTaxable" data-dis="@x.TotalDiscount" data-vat="@x.TotalVatPrice" data-due="@x.TotalFinalPrice" data-url="@Url.Action("invoice", "sale", new { Area = "Commercial", id = x.Id })">

                                <td class="row-chb">
                                    <input type="checkbox" class="tblRow px-3" name="itemId" value="@x.Id" />
                                    @row
                                </td>
                                <td class="tdtag">
                                    @if (x.taged)
                                    {
                                        <img src="~/img/icons/tag.png" />
                                    }
                                </td>
                                <td>
                                    <a asp-action="invoice" asp-controller="sale" asp-area="Commercial" asp-route-id="@x.Id" target="_blank">
                                        <i class="bx bx-detail text-secondary mx-1"></i>
                                    </a>
                                    <a asp-action="print_Invoice" class="me-2" asp-controller="sale" asp-area="Commercial" asp-route-id="@x.Id" target="_blank">
                                        <i class="bx bx-printer text-peimary mx-1"></i>
                                    </a>
                                    <a href="javascript:void(0)" class="removeById" data-target="@x.Id" data-url="@Url.Action("DeleteInvoice", "sale", new { Area = "Commercial" })" title="شماه در حال حذف فاکتور هستید. آیا ادامه می دهید ؟">
                                        <i class="bx bx-trash-alt text-danger mx-1"></i>
                                    </a>
                                </td>
                                @*  <td>@x.status.Value.com_ToStatusName()</td> *@
                                <td class="text-center">@x.InvoiceNumber</td>
                                <td>@x.InvoiceDate.Value.LatinToPersian()</td>
                                <td>@x.PartyName</td>
                                @*  <td>@x.Remarks</td> *@
                                <td>@x.SettlementTypeName</td>
                                <td>@(x.TotalTaxable > 0 ? x.TotalTaxable.ToPrice() : "0")</td>
                                <td>@(x.TotalNoTaxable > 0 ? x.TotalNoTaxable.ToPrice() : "0")</td>
                                <td>@(x.TotalDiscount > 0 ? x.TotalDiscount.ToPrice() : "0")</td>
                                <td>@(x.TotalPriceAfterDiscount > 0 ? x.TotalPriceAfterDiscount.ToPrice() : "0")</td>
                                <td>@(x.TotalVatPrice > 0 ? x.TotalVatPrice.ToPrice() : "0")</td>
                                <td>@(x.TotalFinalPrice > 0 ? x.TotalFinalPrice.ToPrice() : "0")</td>
                                <td>@x.CreatorUserId</td>
                                <td>
                                    <a href="javascript:void(0)" data-target="@x.Id" data-url="@Url.Action("TagInvoice", "sale", new { Area = "Commercial" })" class="btn btn-sm  @(x.taged==true ? "btn-outline-warning":"btn-outline-primary") accAjaxPost m-1">
                                        @(x.taged==true ?"حذف نشان":"نشان کردن")
                                    </a>

                                </td>
                            </tr>

                            row++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
    <div class="card-footer">


        <div class="row">
            <div class="col-lg-7 col-md-6">
                @if (Model.Invoices.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="pagin mt-3">
                        <ul class="pagination pagination-sm text-center">
                            @if (Model.Invoices.HasPreviousPage)
                            {
                                <li class="page-item prev">
                                    <a class="page-link" data-formid="frmSaleInvoiceFilter" data-currentpage="@(Model.Invoices.CurrentPage - 1)">
                                        <i class="tf-icon bx bx-chevrons-left"></i>
                                    </a>
                                </li>
                            }

                            @{
                                int totalPages = Model.Invoices.TotalPages;
                                int currentPage = Model.Invoices.CurrentPage;
                                int pageRange = 3; // تعداد صفحات قبل و بعد از صفحه فعلی

                                int startPage = Math.Max(1, currentPage - pageRange);
                                int endPage = Math.Min(totalPages, currentPage + pageRange);

                                if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" data-formid="frmSaleInvoiceFilter" data-currentpage="1">1</a>
                                    </li>
                                    if (startPage > 2)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                }

                                for (int i = startPage; i <= endPage; i++)
                                {
                                    string strActive = currentPage == i ? "active" : "";
                                    <li class="page-item @strActive">
                                        <a class="page-link" data-formid="frmSaleInvoiceFilter" data-currentpage="@i">@i</a>
                                    </li>
                                }

                                if (endPage < totalPages)
                                {
                                    if (endPage < totalPages - 1)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link" data-formid="frmSaleInvoiceFilter" data-currentpage="@totalPages">@totalPages</a>
                                    </li>
                                }
                            }

                            @if (Model.Invoices.HasNextPage)
                            {
                                <li class="page-item next">
                                    <a class="page-link" data-formid="frmSaleInvoiceFilter" data-currentpage="@(Model.Invoices.CurrentPage + 1)">
                                        <i class="tf-icon bx bx-chevrons-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>

                }
            </div>
            <div class="col-lg-5 col-md-6">
                <ul class="docfooter-totalAmounts totalAmounts1">
                    <li class="totalAmounts1-title">
                        <span class="text-warning">جمع صفحه</span>
                    </li>
                    <li>
                        <label>جمع فروش مشمول  : </label>
                        <div>
                            <input type="text" readonly value="@TotalTaxable.ToPrice()" />
                            <span class="text-sm-end">ريال</span>
                        </div>
                    </li>
                    <li>
                        <label>جمع فروش غیرمشمول : </label>
                        <div>
                            <input type="text" readonly value="@TotalNoTaxable.ToPrice()" />
                            <span class="text-sm-end">ريال</span>
                        </div>
                    </li>
                    <li>
                        <label>جمع تخفیفات : </label>
                        <div>
                            <input type="text" readonly value="@totalDiscount.ToPrice()" />
                            <span class="text-sm-end">ريال</span>
                        </div>
                    </li>
                    <li>
                        <label>جمع پس از تخفیف : </label>
                        <div>
                            <input type="text" readonly value="@totalAfterDiscount.ToPrice()" />
                            <span class="text-sm-end">ريال</span>
                        </div>
                    </li>
                    <li>
                        <label>جمع ارزش افزوده : </label>
                        <div>
                            <input type="text" readonly value="@totalVat.ToPrice()" />
                            <span class="text-sm-end">ريال</span>
                        </div>
                    </li>
                    <li>
                        <label>مبلغ نهایی  : </label>
                        <div>
                            <input type="text" readonly value="@finalPrice.ToPrice()" />
                            <span class="text-sm-end">ريال</span>
                        </div>
                    </li>
                </ul>
            </div>

        </div>
    </div>

</div>
