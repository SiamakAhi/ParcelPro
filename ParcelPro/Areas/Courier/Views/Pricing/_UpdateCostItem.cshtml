@model CostItemDto
<div class="modal-dialog dataentry-modal">
    <div class="modal-content dataentry">
        <div class="dataentry-title">
            <span class="">ویرایش آیتم هزینه</span>
        </div>
        <form asp-action="UpdateCostItem" asp-controller="Pricing" asp-area="Courier" method="post">
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            <div class="row dataentry-controls">
                <!-- بخش مشخصات -->
                <div class="col-md-6 garnet-section garnet-section-info">
                    <div class="garnet-section-header">
                        <h6>مشخصات</h6>
                    </div>
                    <div class="col-md-12 mb-1">
                        <label asp-for="CostCode" class="form-label">کد هزینه</label>
                        <input type="text" class="form-control form-control-sm" asp-for="CostCode" />
                        <span asp-validation-for="CostCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-1">
                        <label asp-for="Description" class="form-label">شرح آیتم</label>
                        <input type="text" class="form-control form-control-sm" asp-for="Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <!-- بخش مقادیر و وضعیت -->
                <div class="col-md-6 garnet-section garnet-section-info">
                    <div class="garnet-section-header">
                        <h6>مقادیر و وضعیت</h6>
                    </div>
                    <div class="col-md-12 mb-1">
                        <label asp-for="Amount" class="form-label">مقدار</label>
                        <input type="number" class="form-control form-control-sm" asp-for="Amount" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-1">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" asp-for="ForBillOfLading" />
                            <label class="form-check-label" asp-for="ForBillOfLading">مربوط به بارنامه</label>
                        </div>
                    </div>
                    <div class="col-md-12 mb-1">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" asp-for="ForConsignment" />
                            <label class="form-check-label" asp-for="ForConsignment">مربوط به مرسوله</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- دکمه‌های ذخیره و انصراف -->
            <div class="row">
                <div class="col-md-4 offset-8 dataentry-buttons-container container-row">
                    <div class="dataentry-buttons">
                        <a href="javascript:void(0)" class="btn btn-primary accAjaxSubmit">ذخیـره</a>
                        <button type="reset" class="btn btn-warning" data-bs-dismiss="modal" aria-label="Close">انصراف</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="~/js/forms-selects.js"></script>