@model BankAccountTafsilDto
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@ViewBag.Title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
       
        <div class="modal-body">
            <div class="accordion mt-3 accordion-header-primary" id="accordionStyle1">
                <div class="accordion-item card">
                    <h2 class="accordion-header">
                        <button type="button" class="accordion-button collapsed bg-info" data-bs-toggle="collapse" data-bs-target="#accordionStyle1-1" aria-expanded="false">
                            انتخاب تفصیلی از حساب های وجود
                        </button>
                    </h2>

                    <div id="accordionStyle1-1" class="accordion-collapse collapse" data-bs-parent="#accordionStyle1" style="">
                        <div class="accordion-body lh-2">
                            <form class="mt-3" asp-action="SetAccountBankTafsil" asp-controller="AccBsKhazaneh" asp-area="" method="post">
                                <input type="hidden" asp-for="BankAccountId" value="@Model.BankAccountId" />
                                <div class="row">
                                    <div class="col-md-12 mb-2">
                                        <label class="form-label">حساب های تفصیلی</label>
                                        <select asp-for="Id" class="form-control form-control-sm select2" asp-items="@ViewBag.Tafsils">
                                            <option value="">انتخاب کنید</option>
                                        </select>
                                    </div>
                                </div>
                                <hr />
                                <div class="row d-grid mt-2 mb-5">
                                    <input type="button" class="btn btn-outline-primary mt-2 accAjaxSubmit" value="اختصاص به حساب بانکی" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="accordion-item card mt-2">
                    <h2 class="accordion-header">
                        <button type="button" class="accordion-button collapsed bg-primary" data-bs-toggle="collapse" data-bs-target="#accordionStyle1-2" aria-expanded="false">
                            ایجاد حساب تفصیلی جدید
                        </button>
                    </h2>
                    <div id="accordionStyle1-2" class="accordion-collapse collapse" data-bs-parent="#accordionStyle1">
                        <div class="accordion-body lh-2">
                            <form asp-action="CreateAccountBankTafsil" asp-controller="AccBsKhazaneh" asp-area="" method="post" class="mt-4 appform1">

                                <input type="hidden" asp-for="BankAccountId" value="@Model.BankAccountId" />
                                <input type="hidden" asp-for="IsPerson" value="@false" />
                                <div class="row mb-1">
                                    <label class="col-sm-3 col-form-label" asp-for="Name"></label>
                                    <div class="col-sm-9">
                                        <input type="text" asp-for="Name" class="form-control" />
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label class="col-sm-3 col-form-label" asp-for="Description"></label>
                                    <div class="col-sm-9">
                                        <textarea rows="3" asp-for="Description" class="form-control" placeholder="..."></textarea>
                                    </div>
                                </div>
                                <hr />
                                <div class="row mb-4">
                                    <label class="col-sm-3 col-form-label">گروه (ها)</label>
                                    <div class="col-sm-9 select2-dark">
                                        <select asp-for="intGroupsId" class="select2 form-select" multiple asp-items="@ViewBag.Groups">
                                        </select>
                                    </div>
                                </div>
                                <hr />
                                <div class="row d-grid mt-3">
                                    <input type="button" class="btn btn-secondary mt-2 accAjaxSubmit" value="ایجاد" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
            
        </div>
    </div>
</div>

<script src="~/js/forms-selects.js"></script>
