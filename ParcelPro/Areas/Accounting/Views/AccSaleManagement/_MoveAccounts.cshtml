@model MoveAccountDto

<div class="modal-dialog app-modal-md">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
              یکپارچه سازی حساب ها
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form class="mt-3" asp-action="MoveAccounts" asp-controller="AccSaleManagement" asp-area="Accounting" method="post">

                <div class="row">
                    <div class="col-md-12 mb-4 select2-dark">
                        <label asp-for="OriginAccounts" class="form-label">
                            <strong>حساب های مبدأ</strong>
                         <span>حساب هایی که قصد دارید به حساب دیگری منتقل شوند</span>
                        </label>
                        <select class="form-select select2" multiple asp-for="OriginAccounts" asp-items="@ViewBag.Persen">
                            <option>انتخاب کنید</option>
                        </select>
                    </div>

                    <div class="col-md-12 mb-3 select2-primary">
                        <label asp-for="TargetAccount" class="form-label">
                            <strong>حساب مقصد</strong>
                            <span>حسابی که حساب های انتخاب شده بالا، باید به آن منتقل شوند</span>
                        </label>
                        <select class="form-select select2" asp-for="TargetAccount" asp-items="@ViewBag.Clients">
                            <option>انتخاب کنید</option>
                        </select>
                    </div>
                </div>
                <hr />
                
                <div class="d-grid mb-2 p-2 mt-4">
                    <a href="#" class="btn btn-primary accAjaxSubmit">انتقال و یکپارچه سازی حساب ها</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/vendor/libs/select2/select2.js"></script>
<script src="~/js/forms-selects.js"></script>