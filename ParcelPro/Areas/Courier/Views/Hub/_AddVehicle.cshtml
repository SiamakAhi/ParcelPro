@model VehicleDto
<div class="modal-dialog garnet-modal">
    <div class="modal-content">
        <div class="modal-header">
            <span class=""> تعریف خودروی حمل </span>
        </div>
        <div class="modal-body">
            <form asp-action="AddVehicle" asp-controller="Hub" asp-area="Courier" method="post">
                <div class="row">
                    <div class="col-md-6 mb-1">
                        <label asp-for="VehicleType" class="form-label"></label>
                        <select class="form-select form-control-sm" asp-for="VehicleType">
                            <option value="وانت">وانت</option>
                            <option value="کامیونت">کامیونت</option>
                            <option value="کامیون">کامیون</option>
                            <option value="تریلی">تریلی</option>
                            <option value="سواری">سواری</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-1">
                        <label asp-for="Description" class="form-label">نام خودرو</label>
                        <input type="text" class="form-control form-control-sm" asp-for="Description" />
                    </div>
                    <div class="col-md-6 mb-1">
                        <label asp-for="PlateNumber" class="form-label">شماره شهربانی</label>
                        <input type="text" class="form-control form-control-sm" asp-for="PlateNumber" />
                    </div>
                    <div class="col-md-6 mb-1">
                        <label asp-for="Model" class="form-label">سال ساخت</label>
                        <input type="text" class="form-control form-control-sm" asp-for="Model" />
                    </div>
                    <div class="col-md-6 mb-1">
                        <label asp-for="LoadCapacityKg" class="form-label">ظرفیت حمل Kg</label>
                        <input type="number" min="0" class="form-control form-control-sm" asp-for="LoadCapacityKg" />
                    </div>

                    <hr />
                    <div class="col-md-12 mb-2 mt-3 select2-dark">
                        <label asp-for="MoeinId" class="form-label">حساب معین</label>
                        <select class="form-select form-select-sm select2" asp-for="MoeinId" asp-items="@ViewBag.Moeins">
                            <option value="0">انتخاب کنید</option>
                        </select>
                    </div>
                    <div class="col-md-12 mb-2 select2-dark">
                        <label asp-for="TafsilId" class="form-label">حساب تفصیلی</label>
                        <select class="form-select form-select-sm select2" asp-for="TafsilId" asp-items="@ViewBag.Tafsils">
                            <option value="0">انتخاب کنید</option>
                        </select>
                    </div>
                    <hr />
                    <div class="col-md-12 p-3 mb-2">
                        <label class="switch">
                            <input type="checkbox" asp-for="IsActive" class="switch-input">
                            <span class="switch-toggle-slider">
                                <span class="switch-on"></span>
                                <span class="switch-off"></span>
                            </span>
                            <span class="switch-label">فعال</span>
                        </label>
                    </div>
                </div>
                <div class=" dataentry-buttons-container container-row">
                    <div class="dataentry-buttons">
                        <a href="javascript:void(0)" class="btn btn-primary accAjaxSubmit"> ذخیـره</a>
                        <button type="reset" class="btn btn-warning" data-bs-dismiss="modal" aria-label="Close">
                            انصراف
                        </button>
                    </div>
                </div>
            </form>
</div>
      
    </div>
</div>

<script src="~/js/forms-selects.js"></script>