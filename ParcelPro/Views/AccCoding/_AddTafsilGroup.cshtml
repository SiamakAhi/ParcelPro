@model TafsilGroupDto

<div class="modal-dialog modal-lg modal-simple">

    <div class="modal-content p-3 p-md-5">
        <div class="modal-header">
            <div class="alert alert-primary alert-dismissible d-flex align-items-center" role="alert">
                <h5>
                    <i class="bx bx-xs bx-command me-2 text-warning"></i>
                    ایجاد گروه تفصیلی
                </h5>
               
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class=" mb-4 mt-0 mt-md-n2">
                <form asp-action="AddTafsilGroup" asp-controller="AccCoding" asp-area="" method="post" class="mt-4 appform1">

                   
                    <div class="row mb-2">
                        <label class="col-sm-3 col-form-label" asp-for="GroupName"></label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="GroupName" class="form-control" />
                        </div>
                    </div>
                   <div class="row mb-3">
                        <label class="col-sm-3 col-form-label" asp-for="Description"></label>
                        <div class="col-sm-9">
                            <textarea rows="3" asp-for="Description" class="form-control" placeholder="..."></textarea>
                        </div>
                    </div>
                   
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <label class="switch mt15">
                                <input type="checkbox" asp-for="IsPerson" class="switch-input">
                                <span class="switch-toggle-slider">
                                    <span class="switch-on"></span>
                                    <span class="switch-off"></span>
                                </span>
                                <span class="switch-label">مربوط که اطلاعات اشخاص حقیقی یا حقوقی است ؟</span>
                            </label>
                        </div>
                    </div>

                    <hr />
                    <div class="row d-grid mt-3">
                        <input type="button" class="btn btn-primary mt-2 accAjaxSubmit" value="ایجاد گروه" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>