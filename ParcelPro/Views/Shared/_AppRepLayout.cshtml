                        {
                            <li class="nav-item">
                                <a asp-action="IssuedBills" asp-controller="Kp" asp-area="Representatives" class="nav-link">
                                    پنل قدیم
                                    <small class="text-danger"> (موقت)</small>
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dropdown031" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    خدمات توزیع بار
                                    <small class="text-secondary ms-1">(وارد غیر سیستمی)</small>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdown031">
                                    <a class="dropdown-item" href="#">ثبت بارنامه وارده</a>
                                    <a class="dropdown-item" href="#">مدیریت بارنامه های وارده</a>
                                    <a class="dropdown-item" href="#">گزارشات</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">تجزیه و مبادلات</a>
                                <div class="dropdown-menu" aria-labelledby="dropdown04">
                                    <a class="dropdown-item" href="#">عملیات مانیفست</a>
                                    <a class="dropdown-item" href="#">تفکیک و توزیع</a>
                                    <a class="dropdown-item" href="#">گزارشات</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
