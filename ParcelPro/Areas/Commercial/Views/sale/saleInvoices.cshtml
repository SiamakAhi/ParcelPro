            <li><label>جمع غیرمشمول : </label><span id="noTaxable"></span></li>
            <li><label> جمع تخفیفات :</label><span id="discount"></span></li>
            <li><label> جمع پس از تخفیف :</label><span id="aftardiscount"></span></li>
            <li><label>جمع ارزش افزوده :</label><span id="vat"></span></li>
            <li><label>جمع نهایی : </label><span id="finalPrice"></span></li>
        </ul>
        <ul class="mt-1 btnList">
            <li><a href="javascript:void(0)" data-tableid="tblSaleInvoices" data-allerttext=" خروجی از ردیفهای انتخاب شده" data-url="@Url.Action("PrintSelectedInvoice", "sale", new { Area = "Commercial" })" class="btn btn-sm btn-primary callaction-bulk">پرینت گروهی</a></li>
            <li><a href="javascript:void(0)" data-tableid="tblSaleInvoices" data-allerttext="ردیف های انتخاب شده را نشان می کنید ؟" data-url="@Url.Action("TagInvoices", "sale", new { Area = "Commercial" })" class="btn btn-sm btn-secondary bulkAction">نشان کردن ردیف ها </a></li>
            <li><a href="javascript:void(0)" data-tableid="tblSaleInvoices" data-allerttext="نشان ردیف های نشان شده را حذف می کنید؟" data-url="@Url.Action("UnTagInvoices", "sale", new { Area = "Commercial" })" class="btn btn-sm btn-warning bulkAction">حذف نشان ردیف ها </a></li>
            <li><a href="javascript:void(0)" data-tableid="tblSaleInvoices" data-allerttext="کپی  از فاکتورهای انتخاب شده انجام شود ؟" data-url="@Url.Action("CopySelectedInvoices", "sale", new { Area = "Commercial" })" class="btn btn-sm btn-success bulkAction-callmodal"> کپی از فاکتورهای انتخاب شده</a></li>
            <li><a href="javascript:void(0)" data-tableid="tblSaleInvoices" data-allerttext="فاکتورهای تکرای حذف شود ؟" data-url="@Url.Action("deleteDuplacated", "sale", new { Area = "Commercial" })" class="btn btn-sm btn-danger bulkAction">حذف فاکتورهای تکراری</a></li>
        </ul>
