@model List<CostItemDto>
@{
    ViewData["Title"] = "مدیریت آیتم‌های هزینه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header alert-secondary p-0">
            <h5 class="custom-card-title">
                <i class="bx bxs-category-alt text-warning"></i>
                مدیریت آیتم‌های هزینه
            </h5>
            <div class="section-nav">
                <div class="nav-btnbox ms-2 mb-2">
                    <a href="#" data-url="@Url.Action("AddCostItem", "Pricing", new { Area = "Courier" })" data-target="0" class="btn btn-sm btn-secondary callform">
                        ایجاد آیتم هزینه جدید
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body card-table">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ردیف</th>
                        <th>کد هزینه</th>
                        <th>شرح هزینه</th>
                        <th>نحوه محسابه</th>
                        <th>مقدار</th>
                        <th>برای مرسوله</th>
                        <th>برای بارنامه</th>

                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model?.Count() > 0)
                    {
                        int row = 1;
                        foreach (var x in Model)
                        {
                            <tr>
                                <td class="text-center">@row</td>
                                <td class="text-center">@x.CostCode</td>
                                <td class="text-center">@x.Description</td>
                                <td class="text-center">@x.RateImpactTypeName</td>
                                <td class="text-center">@x.Amount</td>
                                <td>
                                    @if(x.ForConsignment){
                                        <i class="bx bx-check text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="bx bx-x text-danger"></i>
                                    }
                                </td>
                                <td>
                                    @if (x.ForBillOfLading)
                                    {
                                        <i class="bx bx-check text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="bx bx-x text-danger"></i>
                                    }
                                </td>
                                <td class="row-btns text-center">
                                    <a href="#" class="callform" data-url="@Url.Action("UpdateCostItem", "Pricing", new { Area = "Courier", id = x.Id })">
                                        <i class="bx bx-edit-alt text-gray" title="ویرایش"></i>
                                    </a>
                                    <a href="#" class="removeById" data-url="@Url.Action("DeleteCostItem", "Pricing", new { Area = "Courier" })" data-target="@x.Id">
                                        <i class="bx bx-trash text-warning" title="حذف"></i>
                                    </a>
                                </td>
                            </tr>
                            row++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">
                                آیتم هزینه در سیستم ثبت نشده است
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer p-4">
    </div>
</div>