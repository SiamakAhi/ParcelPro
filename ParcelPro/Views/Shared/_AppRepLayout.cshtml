                        <i class="bx bx-download text-primary"></i>
                        <span class="align-middle">نصب</span>
                    </a>
                    <a class="dropdown-item" asp-action="AppUserProfile" asp-controller="kp" asp-area="Representatives">
                        <i class="bx bx-user "></i>
                        <span class="align-middle text-light">@branch.Name</span>
                    </a>
                    <a class="dropdown-item" asp-action="SignOut" asp-controller="Account" asp-area="">
                        <i class="bx bx-power-off ms-2 text-danger"></i>
                        <span class="align-middle">خروج</span>
                    </a>
                </div>
            </div>
