@model List<RouteDto>
@{
    ViewData["Title"] = "مدیریت مسیرهای داخلی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header alert-secondary p-0">
            <h5 class="custom-card-title">
                <i class="bx bxs-category-alt text-warning"></i>
                مدیریت مسیرهای داخلی
            </h5>
            <div class="section-nav">

                <div class="nav-btnbox ms-2 mb-2">
                    <a href="#" data-url="@Url.Action("AddRoute", "CourierService", new { Area = "Courier" })" data-target="0" class="btn btn-sm btn-secondary callform">
                        ایجاد مسیـر جدید
                    </a>
                </div>
            </div>

        </div>
    </div>

    <div class="card-body card-table">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ردیف</th>
                        <th>کد مسیر</th>
                        <th>نام مسیر </th>
                        <th>نام (انگلیسی)</th>
                        <th>مبدأ</th>
                        <td>مقصد</td>
                        <td>زون نرخ</td>
                        <td>وضعیت</td>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @if (Model?.Count() > 0)
                    {
                        int row = 1;
                        foreach (var x in Model)
                        {
                            <tr>
                                <td class="text-center">@row</td>
                                <td class="text-center">@x.RouteCode</td>
                                <td class="text-center">@x.RouteName</td>
                                <td class="text-center">@x.RouteName_En</td>
                                <td class="text-center">@x.OriginCity</td>
                                <td class="text-center">@x.DestinationCity</td>
                                <td class="text-center">@x.ZoneName</td>
                                <td class="text-center">@(x.IsActive == true ? "فعال" : "غیرفعال")</td>
                                <td class="row-btns text-center">
                                    <a href="#" class="callform" data-url="@Url.Action("UpdateRoute", "CourierService", new { Area = "Courier", id = x.RouteId })"><i class="bx bx-edit-alt text-gray" title="ویرایش"></i></a>
                                    <a href="#" class="removeById" data-url="@Url.Action("", "CourierService", new { Area = "Courier" })" data-target="@x.RouteId"><i class="bx bx-trash text-warning" title="حذف"></i></a>
                                </td>
                            </tr>

                            row++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7">
                                سرویسی در سیستم ثبت نشده است
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>

    <div class="card-footer p-4">
    </div>
</div>
</div>

