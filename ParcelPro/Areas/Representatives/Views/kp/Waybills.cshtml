@model VmBranchUserPanel
@{
    ViewData["Title"] = "کیهان پست هاب ";
    Layout = "~/Views/Shared/_AppRepLayout.cshtml";

}

<div class="container">
    <div class="search-box mb-2">
        <h4 class="card-title">جستجوی بارنامه</h4>
        <form asp-action="Waybills" asp-controller="kp" asp-area="Representatives" method="get" id="frmBillFilter">
            <input type="hidden" asp-for="filter.CurrentPage" value="1" />
            <input type="hidden" asp-for="filter.IsFromBody" value="true" />
            <div class="row">
                <div class="col-md-5 mb-2">
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex justify-content-around mt-4">
                                <div class="form-check mb-1">
                                    <input class="form-check-input" type="radio" asp-for="filter.Sectiontype" id="Sectiontype" value="1" checked="">
                                    <label class="form-check-label" for="Sectiontype">
                                        وارده و صادره
                                    </label>
                                </div>
                                <div class="form-check mb-1">
                                    <input class="form-check-input" type="radio" asp-for="filter.Sectiontype" id="Sectiontype2" value="2">
                                    <label class="form-check-label" for="Sectiontype2">
                                        فقط وارده
                                    </label>
                                </div>
                                <div class="form-check mb-1">
                                    <input class="form-check-input" type="radio" asp-for="filter.Sectiontype" id="Sectiontype3" value="3">
                                    <label class="form-check-label" for="Sectiontype3">
                                        فقط صادره
                                    </label>
                                </div>
                                <div class="form-check mb-1">
                                    <input class="form-check-input" type="checkbox" asp-for="filter.ShowCancelation">
                                    <label class="form-check-label" asp-for="filter.ShowCancelation">
                                        نمایش باطل شده ها
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-6">
                            <label class="form-label">شماره بارنامه</label>
                            <input type="text" asp-for="filter.BiilOdLadingNumber" class="form-control" />
                        </div>
                        <div class="col-md-6 col-6">
                            <label class="form-label select2-dark">مسیـر</label>
                            <select asp-for="filter.RoutId" class="form-select select2" asp-items="@ViewBag.Routes">
                                <option value="null"> همه</option>
                            </select>
                        </div>
                        <div class="col-md-6 col-6">
                            <label class="form-label">از تاریخ</label>
                            <input type="text" asp-for="filter.strFromDate" class="form-control flatpickr-input" />
                        </div>
                        <div class="col-md-6 col-6">
                            <label class="form-label">تا تاریخ</label>
                            <input type="text" asp-for="filter.strUntilDate" class="form-control flatpickr-input" />
                        </div>
                        <div class="col-6">
                            <label class="form-label">وضعیت بارنامه</label>
                            <select asp-for="filter.BillStatus" multiple class="form-select select2">
                                <option value="1">در حال صدور</option>
                                <option value="3">در انتظار جمع آوری</option>
                                <option value="6">در حال ارسال به شهر مقصد</option>
                                <option value="7">ورود به هاب شهر مقصد</option>
                                <option value="9">در حال توزیع</option>
                                <option value="11">تحویل شده</option>
                                <option value="15">باطل شده</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <label class="form-label">کاربر صادرکننده</label>
                            <select asp-for="filter.IssuerUserName" class="form-select select2" asp-items="@ViewBag.Issuers">
                                <option value=""> همه</option>

                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 mb-2">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-1 d-flex justify-content-around mt-3">
                                <div class="form-check mb-1">
                                    <input class="form-check-input" type="radio" asp-for="filter.personSearchtype" id="personSearchtype1" value="1" checked="">
                                    <label class="form-check-label" for="personSearchtype1">
                                        جستجو بر اساس شخص در : گیرنده و فرستنده
                                    </label>
                                </div>
                                <div class="form-check mb-1">
                                    <input class="form-check-input" type="radio" asp-for="filter.personSearchtype" id="personSearchtype2" value="2">
                                    <label class="form-check-label" for="personSearchtype2">
                                        گیرنده
                                    </label>
                                </div>
                                <div class="form-check mb-1">
                                    <input class="form-check-input" type="radio" asp-for="filter.personSearchtype" id="personSearchtype3" value="3">
                                    <label class="form-check-label" for="personSearchtype3">
                                        فرستنده
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 select2-dark">
                            <label class="form-label">شخص</label>
                            <select asp-for="filter.SenderId" class="form-select select2" asp-items="@ViewBag.Persen">
                                <option value="null"> همه</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <label class="form-label">نوع تسویه حساب</label>
                            <select asp-for="filter.SettelmentType" class="form-select">
                                <option value="null"> همه</option>
                                <option value="1">نقدی</option>
                                <option value="2">پسکرایه</option>
                                <option value="3">اعتباری</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <label class="form-label">وضعیت پرداخت</label>
                            <select asp-for="filter.PaymentStatus" class="form-select">
                                <option value="null"> همه</option>
                                <option value="1">پرداخت شده</option>
                                <option value="2">پرداخت نشده</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <label class="form-label">نماینده توزیع</label>
                            <select asp-for="filter.Distributer" class="form-select select2" asp-items="@ViewBag.Distributers">
                                <option value="null"> همه</option>

                            </select>
                        </div>

                    </div>
                </div>

                <div class="col-md-2 mb-2">
                    <div class="row">
                        <div class="col-md-12 mt-5">
                            <label class="form-label">تعداد ردیف در هر صفحه</label>
                            <input type="number" asp-for="filter.PageSize" class="form-control text-center" value="@Model.filter.PageSize" />
                        </div>
                        <div class="col-md-12 col-6 d-grid p-1 mt-3">
                            <input type="submit" class="btn btn-danger" value="جستجـو" />
                        </div>
                        @if (User.IsInRole("BranchManager"))
                        {
                            <div class="col-md-12 col-6 d-grid p-1 mt-3">
                                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                    <a href="#" class="btn btn-secondary">اقدامات </a>
                                    <div class="btn-group" role="group">
                                        <button id="btnGroupDrop5" type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop5" style="">
                                            <a class="dropdown-item getprint_app" href="javascript:void(0)"
                                               data-frmid="#frmBillFilter"
                                               data-url="@Url.Action("RpWaybills", "BranchReports", new { Area = "Representatives" })">
                                                <i class="fa fa-list me-3"></i>
                                                چاپ گزارش
                                            </a>
                                            <a class="dropdown-item bulkAction-callmodal" href="javascript:void(0)" data-tableid="tblBills"
                                               data-url="@Url.Action("ChangeDestributer", "Billoflading", new { Area = "Courier" })">
                                                <i class="fa fa-list me-3"></i>
                                                اختصاص گروهی نماینده
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="container-fluid p-3">
    <div class="table-responsive">
        @if (User.IsInRole("Seller"))
        {
            <table class="table table-hover table-bordered tbl-light" id="tblBills">
                <thead>
                    <tr class="table-light">
                        <th>
                            <input type="checkbox" id="selectTblRows" />
                        </th>
                        <th>#</th>
                        <th class="w-150">سریال / عملیات</th>
                        <th>تاریخ صدور</th>
                        <th>زمان صدور</th>
                        <th>مسیر</th>
                        <th>فرستنده</th>
                        <th>گیرنده</th>
                        <th>تعداد</th>
                        <th>وزن</th>
                        <th>مبلغ بارنامه</th>
                        <th> تسویه حساب</th>
                        <th>وضعیت پرداخت</th>
                        <th>توضیحات</th>
                        <th>وضعیت</th>
                        <th>تاریخ تحویل</th>
                        <th>تحویل دهنده</th>
                        <th>آدرس گیرنده</th>
                        <th>نماینده توزیع</th>
                        <th>کاربر</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Bills?.Items != null)
                    {
                        int row = 1;

                        foreach (var x in Model.Bills.Items)
                        {
                            string statusClass = x.BillOfLadingStatusId.BillStatusToBtnCssClassName();
                            <tr>
                                <td> <input type="checkbox" name="tableRow" class="tblRow" value="@x.Id" /></td>
                                <td class="text-center text-light">
                                    @row
                                </td>
                                <td class="w-150">
                                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                        <a href="#" class="btn @statusClass btn-tr">@x.WaybillNumber</a>
                                        <div class="btn-group" role="group">
                                            <button id="btnGroupDrop5" type="button" class="btn @statusClass btn-tr dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop5" style="">
                                                @if (!x.IsSetteled && x.SettelmentTypeId != 3)
                                                {
                                                    <a class="dropdown-item callform" href="javascript:void(0)"
                                                       data-url="@Url.Action("BillCashSettelment", "Billoflading", new { Area = "Courier", billId = x.Id })">
                                                        <i class="fa fa-credit-card me-3"></i>
                                                        پرداخت
                                                    </a>
                                                }
                                                <a class="dropdown-item" asp-action="WaybillLabel" asp-controller="Billoflading" asp-area="Courier" asp-route-id="@x.Id" target="_blank"><i class="fa fa-tag me-3"></i>چاپ لیبل</a>
                                                <a class="dropdown-item" asp-action="PrintBill" asp-controller="GeneralBill" asp-area="Courier" asp-route-billOfladingId="@x.Id" target="_blank"><i class="fa fa-print me-3"></i>چاپ بارنامه</a>
                                                @if (User.IsInRole("BranchManager"))
                                                {
                                                    <a class="dropdown-item" asp-action="bill" asp-controller="Billoflading" asp-area="Courier" asp-route-billOfladingId="@x.Id"><i class="fa fa-eye me-3"></i>مشاهده</a>

                                                    <a href="javascript:void(0)" class="dropdown-item callform" data-url="@Url.Action("BillPaymentRecords", "Billoflading", new { Area = "Courier", id = x.Id })"><i class="fa fa fa-credit-card me-3"></i>سوابق پرداخت</a>
                                                    @if (!x.IsSetteled)
                                                    {
                                                        <a href="javascript:void(0)" class="dropdown-item callform" data-url="@Url.Action("ChangeSettelmenttype", "Billoflading", new { Area = "Courier", id = x.Id })">
                                                            <i class="fa fa  fa-exchange me-3"></i>تغییر روش تسویه
                                                        </a>
                                                    }
                                                    <a href="javascript:void(0)" class="dropdown-item callform" data-url="@Url.Action("DellBill", "Billoflading", new { Area = "Courier", id = x.Id })"><i class="fa fa-trash-alt me-3 text-warning"></i>حذف</a>
                                                }

                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="td-date">@x.IssuanceDate.LatinToPersian()</td>
                                <td class="td-time">@x.IssuanceTime</td>
                                <td>@x.RouteName</td>
                                <td>@x.SenderName</td>
                                <td>@x.ReceiverName</td>
                                <td class="text-center">@x.ConsigmentCount</td>
                                <td class="col-price">@x.TotalWeight.ToString("0.##")</td>
                                <td class="col-price">@x.BillPrice.ToPrice()</td>
                                <td>@x.SettelmentTypeId.ToSettelmentTypeName()</td>
                                <td>
                                    @if (x.IsSetteled)
                                    {
                                        <span>پرداخت شده</span>
                                    }
                                    else
                                    {
                                        <strong class="text-warning">پرداخت نشده</strong>
                                    }

                                <td>@x.Description</td>
                                <td>@x.LastStatusDescription</td>
                                <td>@x.tg_DeliveryDate?.LatinToPersian()</td>
                                <td>@x.tg_CourierManUserName</td>
                                <td>@x.ReceiverAddress</td>
                                <td>@x.DistributerBranch</td>
                                <td class="text-secondary">@x.CreatedBy</td>
                            </tr>
                            row++;
                        }
                    }

                </tbody>
                <tfoot>
                    @if (Model.Bills?.Items != null)
                    {
                        <tr>
                            <td colspan="7" class="text-left me-2">جمع صفحه : </td>
                            <td class="text-center bg-secondary">@Model.Bills.Items.ToList().Sum(n => n.ConsigmentCount)</td>
                            <td class="text-center bg-secondary">@Model.Bills.Items.ToList().Sum(n => n.TotalWeight).ToString("0.##")</td>
                            <td class="text-center bg-secondary">@Model.Bills.Items.ToList().Sum(n => n.BillPrice).ToPrice()</td>
                        </tr>
                    }

                </tfoot>
            </table>

            <div>
                <div class="pagin-box">
                    @if (Model.Bills?.TotalPages > 1)
                    {
                        <ul class="pagination text-center">
                            @if (Model.Bills.HasPreviousPage)
                            {
                                <li class="page-item prev">
                                    <a class="page-link" data-formid="frmBillFilter" data-currentpage="@(Model.Bills.CurrentPage - 1)">
                                        <i class="tf-icon bx bx-chevrons-left"></i>
                                    </a>
                                </li>
                            }

                            @{
                                int totalPages = Model.Bills.TotalPages;
                                int currentPage = Model.Bills.CurrentPage;
                                int pageRange = 3;

                                int startPage = Math.Max(1, currentPage - pageRange);
                                int endPage = Math.Min(totalPages, currentPage + pageRange);

                                if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" data-formid="frmBillFilter" data-currentpage="1">1</a>
                                    </li>
                                    if (startPage > 2)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                }

                                for (int i = startPage; i <= endPage; i++)
                                {
                                    string strActive = currentPage == i ? "active" : "";
                                    <li class="page-item @strActive">
                                        <a class="page-link" data-formid="frmBillFilter" data-currentpage="@i">@i</a>
                                    </li>
                                }

                                if (endPage < totalPages)
                                {
                                    if (endPage < totalPages - 1)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link" data-formid="frmBillFilter" data-currentpage="@totalPages">@totalPages</a>
                                    </li>
                                }
                            }

                            @if (Model.Bills.HasNextPage)
                            {
                                <li class="page-item next">
                                    <a class="page-link" data-formid="frmBillFilter" data-currentpage="@(Model.Bills.CurrentPage + 1)">
                                        <i class="tf-icon bx bx-chevrons-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>

                    }
                </div>
            </div>

        }
    </div>
</div>

<script src="~/js/forms-selects.js"></script>















